            }
        } else {
            return location.reload();
        }
    }

    async function approve() {
        const res = await fetch(`${window.location.pathname}/approve`, {
            method: "POST",
            credentials: "same-origin",
        });
        const response = await res.json();
        if (response.success) {
            if (response.success === true) {
                return location.reload();
            } else {
                return location.reload();
            }
        } else {
            return location.reload();
        }
    }

    async function revokeApproval() {
        const res = await fetch(`${window.location.pathname}/revokeapproval`, {
            method: "POST",
            credentials: "same-origin",
        });
        const response = await res.json();
        if (response.success) {
            if (response.success === true) {
                return location.reload();
            } else {
                return location.reload();
            }
        } else {
            return location.reload();
        }
    }
</script>