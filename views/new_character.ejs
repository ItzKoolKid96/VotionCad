                  <option>African American</option>
                  <option>Latino</option>
                  <option>Asian</option>
                  <option>American Indian</option>
                  <option>Other</option>
                </select>
            </label>

            <label class="block">
                <span class="text-gray-700">Hair Colour</span>
                <select name="hair" class="block w-full mt-0 px-0.5 border-0 border-b-2 border-gray-200  focus:ring-0 focus:border-black">
