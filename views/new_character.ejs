<script>
    let opened = false
    async function openPopup() {
        if (opened === false) {
            document.getElementById("popupMenu").style.display = "block";
            opened = true
        } else {
            document.getElementById("popupMenu").style.display = "none";
            opened = false
        }
    }
</script>

<script>
    $.fn.serializeObject = function () {
        var o = {};
        var a = this.serializeArray();
        $.each(a, function () {
            if (o[this.name]) {
                if (!o[this.name].push) {
                    o[this.name] = [o[this.name]];
                }
                o[this.name].push(this.value || '');
            } else {
                o[this.name] = this.value || '';
            }
        });
        return o;
    };
</script>

<script>
    $('#characterForm').submit(async function (e) {
        e.preventDefault();
        const values = $(this).serializeObject();
        const res = await fetch(`/dashboard/characters/new`, {
            method: "POST",
            credentials: "same-origin",
            body: JSON.stringify(values)
        });
        const response = await res.json();
        console.log(response)
        if (!response.error) {
            if (response.success === true) {
                return window.location.href = "/dashboard";
            } else {
                return document.getElementById("unknown_alert").style.display = "block";
            }
        } else if (response.error === "csrftokenmissmatch") {
            return document.getElementById("csrf_alert").style.display = "block";
        } else {
            return document.getElementById("unknown_alert").style.display = "block";
        }
    });
</script>